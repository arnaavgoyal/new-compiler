#ifndef TOKEN
#define TOKEN(X) 
#endif

#ifndef KEYWORD
#define KEYWORD(X)
#endif

#ifndef TYPE
#define TYPE(X) KEYWORD(X)
#endif

#ifndef OPERATOR
#define OPERATOR(X,Y)
#endif

// tokens

TOKEN(unknown)

TOKEN(eof)

TOKEN(comment)

TOKEN(identifier)

TOKEN(numeric_literal)
TOKEN(character_literal)
TOKEN(string_literal)


// keywords

KEYWORD(if)
KEYWORD(else)

KEYWORD(while)

KEYWORD(continue)
KEYWORD(break)
KEYWORD(return)

KEYWORD(let)
KEYWORD(type)
KEYWORD(as)
KEYWORD(where)

KEYWORD(true)
KEYWORD(false)

// operators

OPERATOR(leftparen, "(")
OPERATOR(rightparen, ")")
OPERATOR(leftbracket, "[")
OPERATOR(rightbracket, "]")
OPERATOR(lrbracket, "[]")
OPERATOR(leftbrace, "{")
OPERATOR(rightbrace, "}")
OPERATOR(plusplus, "++")
OPERATOR(minusminus, "--")
OPERATOR(equal, "=")
OPERATOR(amp, "&")
OPERATOR(exclamation, "!")
OPERATOR(ampamp, "&&")
OPERATOR(pipe, "|")
OPERATOR(pipepipe, "||")
OPERATOR(plus, "+")
OPERATOR(minus, "-")
OPERATOR(asterisk, "*")
OPERATOR(slash, "/")
OPERATOR(backslash, "\\")
OPERATOR(percent, "%")
OPERATOR(greater, ">")
OPERATOR(less, "<")
OPERATOR(greaterequal, ">=")
OPERATOR(lessequal, "<=")
OPERATOR(leftangleparen, "<(")
OPERATOR(rightangleparen, ")>")
OPERATOR(equalequal, "==")
OPERATOR(exclamationequal, "!=")
OPERATOR(comma, ",")
OPERATOR(semicolon, ";")
OPERATOR(colon, ":")
OPERATOR(coloncolon, "::")
OPERATOR(equalgreater, "=>")
OPERATOR(dot, ".")
OPERATOR(minusgreater, "->")

#undef OPERATOR
#undef TYPE
#undef KEYWORD
#undef TOKEN
